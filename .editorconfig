root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{html,svg,xml}]
insert_final_newline = false

[*.md]
# Double whitespace at EOL equals a line break in Markdown
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
